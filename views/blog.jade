extends layout

block content
  .row
    .span8
      block blogcontent

    .span4
      h2 Latest Posts
      ul
        for post in latest
          li
            a(href=post.name) #{post.meta.title}

      h2 Archive
      ul
        for year, yearNum in archive
          li
            a(href="./archive:#{yearNum}")= yearNum
            ul
              for month, monthNum in archive[yearNum]
                li
                  a(href="./archive:#{yearNum}-#{monthNum}") #{month[0].meta.moment.format("MMMM")}
                  |  (#{month.length})

      h2 Tags
      p
        for tagName in Object.keys(tagged).sort()
          a.btn.btn-small(href="./tag:#{tagName}") #{tagName} (#{tagged[tagName].length})
          |  
