// general
pre
    overflow: auto

// main - needs a padding at the bottom to not appear over the footer
#main
    margin-top: 40px
    margin-bottom: 30px

.topbar p
    color: gray
    font-weight: strong

// footer
#footer
    background-color: whiteSmoke
    border-top: 1px solid #ddd
    position: fixed
    bottom: 0
    left: 0
    right: 0
    height: 30px
    text-align: center
    line-height: 30px
    z-index: 10000

