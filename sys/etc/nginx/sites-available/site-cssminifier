# set up the upstream proxy
upstream cssminifier {
    server 127.0.0.1:3001;
    server 127.0.0.1:3002;
}

# main server
server {
    listen 80;
    server_name cssminifier.com;

    # proxy everything to node
    location / {
        proxy_pass http://cssminifier;
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    # logfiles
    access_log /var/log/nginx/cssminifier.access.log;
    error_log  /var/log/nginx/cssminifier.error.log error;
}

# redirect the www version to the non-www version
server {
    listen 80;
    server_name www.cssminifier.com;
    rewrite ^/(.*) http://cssminifier.com/$1 permanent;
}
